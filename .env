# ForecastEngine Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forecastdb
DB_USER=forecast_user
DB_PASSWORD=your_secure_password_here

# TimescaleDB Configuration
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=timeseriesdb
TIMESCALE_USER=timeseries_user
TIMESCALE_PASSWORD=your_timescale_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000

# API Security
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
API_TOKEN=your_api_token_here

# External API Keys
ECONOMIC_API_KEY=your_economic_data_api_key
WEATHER_API_KEY=your_weather_api_key

# Logging
LOG_LEVEL=INFO
LOG_ENDPOINT=your_log_aggregation_endpoint

# Cloud Storage (if using cloud deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-forecastengine-bucket

# Azure (if using Azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=forecastengine

# Google Cloud (if using GCP)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET=your-gcs-bucket

# Monitoring and Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@company.com
EMAIL_PASSWORD=your_email_password

# Performance Settings
MAX_WORKERS=8
MEMORY_LIMIT=8GB
CACHE_TTL=3600

# Development Settings
DEBUG=false
TESTING=false
ENVIRONMENT=production